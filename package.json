{
  "name": "dijkstra",
  "version": "1.0.0",
  "author": "Ralph Varjabedian",
  "description": "dijkstra's various implementations for educational purposes",
  "scripts": {
    "test": "npx nyc mocha -r ts-node/register tests/unit/**/*.ts --exclude tests/unit/**/*.d.ts",
    "build": "npm run lint && npm run prettier:fix && npm run test && npm run compile",
    "compile": "rimraf dist && tsc && rm -r .nyc_output",
    "prettier:fix": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "lint": "npx eslint ./src --fix"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "chai": "^4.3.6",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsc": "^2.0.4",
    "typescript": "^4.8.3"
  }
}

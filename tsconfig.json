{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceRoot": "src",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/docs/**/*"
  ],
  "exclude": [
    "tests/**/*.ts"
  ]
}